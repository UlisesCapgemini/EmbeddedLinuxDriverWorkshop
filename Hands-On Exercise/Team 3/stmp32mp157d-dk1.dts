/dts-v1/;

/ {
    model = "Basic Board";
    compatible = "vendor,basic-board";
    
    #address-cells = <1>;
    #size-cells = <1>;
    
    chosen {
        bootargs = "console=ttyS0,115200 root=/dev/mmcblk0p2 rw";
        stdout-path = &uart0;
    };
    
    memory@80000000 {
        device_type = "memory";
        reg = <0x80000000 0x20000000>; // 512MB at 0x80000000
    };
    
    cpus {
        #address-cells = <1>;
        #size-cells = <0>;
        
        cpu@0 {
            device_type = "cpu";
            compatible = "arm,cortex-a9";
            reg = <0>;
            clock-frequency = <800000000>; // 800MHz
        };
    };
    
    soc {
        #address-cells = <1>;
        #size-cells = <1>;
        compatible = "simple-bus";
        ranges;
        
        uart0: serial@12345000 {
            compatible = "vendor,uart";
            reg = <0x12345000 0x1000>;
            interrupts = <0 10 4>;
            clock-frequency = <24000000>;
            status = "okay";
        };
        
        gpio0: gpio@12346000 {
            compatible = "vendor,gpio";
            reg = <0x12346000 0x1000>;
            gpio-controller;
            #gpio-cells = <2>;
            interrupts = <0 11 4>;
            status = "okay";
        };
        
        i2c0: i2c@12347000 {
            compatible = "vendor,i2c";
            reg = <0x12347000 0x1000>;
            interrupts = <0 12 4>;
            #address-cells = <1>;
            #size-cells = <0>;
            clock-frequency = <100000>;
            status = "okay";
            
            // Example I2C device
            eeprom@50 {
                compatible = "atmel,24c02";
                reg = <0x50>;
            };
        };
        
        spi0: spi@12348000 {
            compatible = "vendor,spi";
            reg = <0x12348000 0x1000>;
            interrupts = <0 13 4>;
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";
            
            // Example SPI device
            flash@0 {
                compatible = "jedec,spi-nor";
                reg = <0>;
                spi-max-frequency = <25000000>;
            };
        };
    };
    
    leds {
        compatible = "gpio-leds";
        
        led0 {
            label = "status";
            gpios = <&gpio0 5 0>;
            default-state = "on";
        };
    };
    
    buttons {
        compatible = "gpio-keys";
        
        button0 {
            label = "user-button";
            gpios = <&gpio0 6 1>;
            linux,code = <28>; // KEY_ENTER
        };
    };
};